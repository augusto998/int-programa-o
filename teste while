menu=str.upper(input("digite a operação desejada:"))
while menu != "SAIR" :
    print ("1 - opção 1")
    print ("2 - opção 2")
    print ("3 - opção 3")
    print ("4 - opção 4")
    print ("5 - Sair")
    menu = input("digite a operação desejada:")
    input("aperte ENTER para continuar")
